<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.poziomlabs.firebasestore.MainActivity"
    tools:showIn="@layout/activity_main">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reviewTitle"
        android:hint="@string/title"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/reviewBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/review"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/reviewTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/saveReview"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewBody"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_action_save" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_gravity="center_horizontal|top"
        android:background="#abcd"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="1px"
        android:listSelector="@android:drawable/list_selector_background"
        android:layout_below="@+id/saveReview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />


</RelativeLayout>
